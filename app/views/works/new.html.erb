<h1>Nytt Jobb</h1>

<% form_for(@work) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Titel:" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Typ:" %><br />
    <%= f.text_field :wtype %>
  </p>
  <p>
    <%= f.label "Beskrivning:" %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "Utkast" %><br />
    <%= f.check_box :draft %>
  </p>
  <p>
    <%= f.label "Klar:" %><br />
    <%= f.check_box :finished %>
  </p>
  <p>
    <%= f.label "Betald:" %><br />
    <%= f.check_box :paid %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit 'Skapa' %>
  </p>
<% end %>

<%= link_to 'Jobb', works_path %>
