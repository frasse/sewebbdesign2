-if !user_signed_in?
	-redirect_to pages_url
%h1 New user
= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
	= f.inputs do
		= f.input :email
		= f.input :password
		= f.input :password_confirmation
		= f.input :login
		= f.input :name
		= f.input :title
		= f.input :description
		= f.input :phone
		= f.buttons

= link_to 'Back', users_path
